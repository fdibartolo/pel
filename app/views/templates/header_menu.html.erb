<div class="container">
  <div class="row" ng-controller="MenuController">
    <nav class="navbar navbar-default" role="navigation">
      <!-- Toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <span class="navbar-text">AVATAR</span>
        <span class="navbar-text"><%= current_user.enterprise_id %></span>
      </div>

      <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Dashboard', root_path %></li>
          <li>
            <a href= <%= "#{root_url}#/inbox" %> >
              Inbox <span ng-show="messageCount > 0" class="badge orangeBadge">{{messageCount}}</span>
            </a>
          </li>
          <% if can? :manage, Request %>
            <li class="dropdown">
              <a href="" class="dropdown-toggle" data-toggle="dropdown">Requests <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Create New Request', "#{root_url}#/new_request" %></li>
              </ul>
            </li>
          <% end %>
          <% if can? :manage, TemplateQuestion %>
            <li class="dropdown">
              <a href="" class="dropdown-toggle" data-toggle="dropdown">Administration <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Template Questions', template_questions_path %></li>
                <li class="divider"></li>
                <li class="disabled"><a href="#">Manage Roles</a></li>
              </ul>
            </li>
          <% end %>
          <li><%= link_to 'Sign Out', signout_path %></li>
        </ul>
      </div>
    </nav>
  </div>
</div>
