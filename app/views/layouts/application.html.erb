<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> 
<html class="no-js" ng-app="cems"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width">
  <title>CIO Management Engagement System</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div class="container headerBackground">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <h1>accenture</h1>
          <h5>CIO Management Engagement System</h5>
        </div>
      </div>
    </div>
    <% if current_user %>
      <div class="container">
        <div class="row">
          <nav class="navbar navbar-default" role="navigation">
            <!-- Toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <span class="navbar-text">AVATAR</span>
              <span class="navbar-text"><%= current_user.enterprise_id %></span>
            </div>

            <div class="collapse navbar-collapse" id="navbar-collapse">
              <ul class="nav navbar-nav navbar-right">
                <li><%= link_to 'Dashboard', root_path %></li>
                <li class="disabled"><a href="#">Inbox</a></li>
                <% if can? :manage, Request %>
                  <li class="dropdown">
                    <a href="" class="dropdown-toggle" data-toggle="dropdown">Requests <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                      <li><a href="">Create New Request</a></li>
                    </ul>
                  </li>
                <% end %>
                <% if can? :manage, TemplateQuestion %>
                  <li class="dropdown">
                    <a href="" class="dropdown-toggle" data-toggle="dropdown">Administration <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                      <li><%= link_to 'Template Questions', template_questions_path %></li>
                      <li class="divider"></li>
                      <li class="disabled"><a href="#">Manage Roles</a></li>
                    </ul>
                  </li>
                <% end %>
                <li><%= link_to 'Sign Out', signout_path %></li>
              </ul>
            </div>
          </nav>
        </div>
      </div>
    <% end %>
  </header>

  <div class="container">
    <div>
      <%= yield %>
    </div>
  </div>
</body>
</html>
