<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <h3>Template Questions <small>Manage the list of areas for Personal Engagement Lists</small></h3>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <ul class="list-group">
        <% @template_questions.each do |template_question| %>
          <li class="list-group-item">
            <p class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
              <%= template_question.body %>
            </p>
            <div class="btn-group btn-group-xs pull-right">
              <%= link_to 'Edit', edit_template_question_path(template_question), class: "btn btn-default" %>
              <%= link_to 'Delete', template_question, method: :delete, data: { confirm: 'Are you sure you want to delete this template question?' }, class: "btn btn-danger" %>
            </div><br>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= link_to 'Create New Template Question', new_template_question_path, class: "btn btn-sm btn-default" %>
    </div>
  </div>
</div>
